{
    "name": "Autotraders",
    "description": "Track bids on Copart",
    "version": "1.1.0",
    "manifest_version": 3,
    "permissions":[
      "tabs","storage","activeTab","cookies","browsingData",
      "webRequest","webNavigation"
    ],
    "web_accessible_resources": [{
      "resources": ["icons/*","images/*","injected.js"],
      "matches": ["<all_urls>"]
    }],
    "host_permissions": ["<all_urls>","http://127.0.0.1:3001/*"],
    "background": {
    "service_worker": "background.js"
    },
    "action":{
        "default_icon":{
          "16":"/icons/a-18.png",
          "48":"/icons/a-48.png"
        },
        "default_popup":"popup.html"
    },
    "content_scripts":[{
      "matches":["https://*.copart.com/*","https://copart.com/*"],
      "js":["content/jquery.js","content/login.js","content/views.js","inject.js"],
      "run_at": "document_start",
      "all_frames": true
      }]
  }